@model IEnumerable<Subscription>
<center>
    <h1>Subscriptions</h1>
    <div>
        <h4>Save 25% on all future purchases and support a charity by subscribing today!</h4>
    </div>
    <form action="" method="get" class="form-example">
        <div class="form-example">
            <label for="name">Enter your name: </label>
            <input type="text" name="name" id="name" required>
        </div>
        <div class="form-example">
            <label for="email">Enter your email: </label>
            <input type="email" name="email" id="email" required>
        </div><br>
        <div><label><h4>Choose Your Subscription Type:</h4></label></div>
        <input type="radio" id="monthly" name="subscriptionType" value="monthly" required>
        <label for="monthly">Monthly - $12/month</label><br>
        <input type="radio" id="yearly" name="subscriptionType" value="yearly">
        <label for="yearly">Yearly - $100/year </label><br><br>
        

        <div class="form-example">
            <input type="submit" value="Subscribe!" class="btn btn-info btn-sm" asp-action="Submitted">
        </div>
    </form>

</center>
